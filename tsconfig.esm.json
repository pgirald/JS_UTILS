{
    "compilerOptions": {
      "target": "ES2021",
      "outDir": "dist/esm",
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "ESNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
    },
    "exclude": [
      "**/*.test.ts",
      "**/*.test.js"
    ],
    "include": [
      "src"
    ]
  }