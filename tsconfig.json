{
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "dist/cjs",
    "declaration": true,
    "declarationDir": "dist/types",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.js"
  ],
  "include": [
    "src"
  ]
}